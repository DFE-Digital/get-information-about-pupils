<div class="sidebarNav">
    <section class="popularActivities">
        <h3>Popular activities</h3>
        <ul>
            @if (User.IsAuthenticated())
            {
                <li>
                    <a asp-controller="News" asp-action="Index" class="govuk-link" id="popular-activities--site-news--link">
                        Site news
                    </a>
                </li>

                if (!User.IsOrganisationEstablishmentWithFurtherEducation())
                {
                    <li>
                        <a asp-controller="@Global.NPDLearnerNumberSearchController" asp-action="NationalPupilDatabase" class="govuk-link" id="popular-activities--search-npd--link">
                            Search NPD using UPNs
                        </a>
                    </li>
                    <li>
                        <a asp-controller="@Global.NPDTextSearchController" asp-action="NonUpnNationalPupilDatabase" class="govuk-link" id="popular-activities--search-npd-non-upn--link">
                            Search NPD by name
                        </a>
                    </li>
                    <li>
                        <a asp-controller="@Global.PPLearnerNumberSearchController" asp-action="PupilPremium" class="govuk-link" id="popular-activities--search-pp--link">
                            Search pupil premium using UPNs
                        </a>
                    </li>
                    <li>
                        <a asp-controller="@Global.PPTextSearchController" asp-action="NonUpnPupilPremiumDatabase" class="govuk-link" id="popular-activities--search-pp-non-upn--link">
                            Search pupil premium by name
                        </a>
                    </li>
                    <li>
                        <a asp-controller="PreparedDownloads" asp-action="Index" class="govuk-link" id="popular-activities--downloads--link">
                            Data downloads
                        </a>
                    </li>
                }
                if (User.IsOrganisationEstablishmentWithFurtherEducation() || User.IsEstablishmentWithAccessToULNPages() || User.IsDfeUser())
                {
                    <li>
                        <a asp-controller="@Global.FELearnerNumberSearchController" asp-action="PupilUlnSearch" class="govuk-link" id="popular-activities--search-uln--link">
                            Search further education using ULNs
                        </a>
                    </li>
                    <li>
                        <a asp-controller="@Global.FELearnerTextSearchController" asp-action="FurtherEducationNonUlnSearch" class="govuk-link" id="popular-activities--search-non-uln--link">
                            Search further education by name
                        </a>
                    </li>
                }
                <li>
                    <a class="govuk-link" href="/Glossary/#_TOC8" aria-label="Metadata files" id="popular-activities-metadata-files--link">
                        Metadata files
                    </a>
                </li>
            }
        </ul>
    </section>
</div>
