@inject IOptions<GoogleTagManagerOptions> GoogleTagManagerOptions

@{
    string containerId = GoogleTagManagerOptions.Value.ContainerId;
}

@if (!string.IsNullOrWhiteSpace(containerId))
{
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=@containerId"
                height="0"
                width="0"
                style="display:none;visibility:hidden">
        </iframe>
    </noscript>
}
