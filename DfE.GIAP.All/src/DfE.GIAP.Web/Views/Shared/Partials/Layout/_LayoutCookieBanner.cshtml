@inject DfE.GIAP.Web.Providers.Cookie.ICookieProvider CookieProvider
@{
    var bannerSeen = CookieProvider.Get(CookieKeys.GiapCookieBannerSeen);
    bool showBanner = bannerSeen is null;
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

@if (showBanner)
{
    <form asp-controller="Cookies" asp-action="CookieBanner" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@returnUrl" />

        <div class="govuk-cookie-banner" data-nosnippet role="region" aria-label="Cookies on Get information about pupils">
            <div class="govuk-cookie-banner__message govuk-width-container">
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds">
                        <h2 class="govuk-cookie-banner__heading govuk-heading-m">
                            Cookies on Get information about pupils
                        </h2>
                        <div class="govuk-cookie-banner__content">
                            <p class="govuk-body">We use some essential cookies to make this service work.</p>
                            <p class="govuk-body">We’d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
                        </div>
                    </div>
                </div>

                <div class="govuk-button-group">
                    <button type="submit" name="analytics" value="yes" class="govuk-button" data-module="govuk-button">
                        Accept analytics cookies
                    </button>

                    <button type="submit" name="analytics" value="no" class="govuk-button" data-module="govuk-button">
                        Reject analytics cookies
                    </button>

                    <a class="govuk-link" asp-controller="Cookies" asp-action="Index">View cookies</a>
                </div>
            </div>
        </div>
    </form>
}
