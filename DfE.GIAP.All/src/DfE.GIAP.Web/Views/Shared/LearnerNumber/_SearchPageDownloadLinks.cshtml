@model LearnerNumberSearchViewModel

@if (Model.LearnerNumber.Length > 0)
{
    <input type="hidden" name="ReturnLearnerNumbers" value="@Model.LearnerNumber" />
    <div class="govuk-grid-column-one-quarter">
        <button class="govuk-button" asp-action="DownloadCommonTransferFileData" name="downloadASCTF" value="selected" type="submit">
            @Model.DownloadSelectedASCTFLink
        </button>
    </div>
    <div class="govuk-grid-column-one-quarter">
        <button class="govuk-button" asp-action="ToDownloadSelectedNPDDataUPN" type="submit">
            @Model.DownloadSelectedLink
        </button>
    </div>
    <div class="govuk-grid-column-one-quarter">
        <button class="govuk-button govuk-button--secondary" asp-action="NPDAddToMyPupilList" name="myPupilList" value="selected" type="submit">
            @Model.AddSelectedToMyPupilListLink
        </button>
    </div>
}
