@{
    ViewData["Title"] = "News archive";

    @model NewsViewModel
}

<h1 class="govuk-heading-xl" id="archive--heading--text">News archive</h1>

@if (Model is null || Model.NewsArticles.Any() is false)
{
    <p class="govuk-body">
        No archived news articles found.
    </p>
}
else
{
    int index = 1;
    @foreach (var article in Model.NewsArticles)
    {
        <div id=@($"news--articles--container{index}")>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <h2 class="govuk-heading-m govuk-!-margin-top-1 govuk-!-text-break-word" id=@($"archive--sub-heading--text {index}")>
                        @Html.Raw(article.Title)
                        <br />
                        <span class="govuk-body-s webapp-text-secondary" id=@($"news--item-modified--text{index}")>
                            @Html.Raw(article.ModifiedDate.ToLongDateString())
                        </span>
                    </h2>
                    <div class="govuk-body govuk-!-text-break-word" id=@($"archive--body--text {index}")>
                        @Html.Raw(article.Body)
                    </div>
                </div>
            </div>
        </div>

        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
        index++;
    }
}
