@using DfE.GIAP.Domain.Search.Learner
@using DfE.GIAP.Web.Controllers.MyPupilList
@using static DfE.GIAP.Web.Controllers.MyPupilList.MyPupilListController
@model MyPupilsViewModel
@{
    ViewData["Title"] = Model.PageHeading;
}

@if (Model.isRemovedSuccessful)
{
    <div class="govuk-inset-text">Selected have been removed from 'My pupil list'</div>
}

<div class="govuk-width-container">
    <h1 class="govuk-heading-xl" id="search-type--text">
        @Model.PageHeading
    </h1>

    <partial name="_MyPupilListNoPupilSelectedError.cshtml" model="@Model" /> <!-- TODO just handle Error setting when Remove / Download requires a selection and set the error (like below). Then delete this partial-->

    @if (Model.IsError)
    {
        <div class="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="heading--errormessage">There is a problem</h2>
            <span id="results--heading-errormessage" class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span>
                @Model.ErrorMessage
            </span>
        </div>

        <partial name="~/Views\Shared\_CTFLimitError.cshtml" />
    }

    <form asp-action="@Model.FormAction" method="POST">
        <input id="toggleSelectAll" type="hidden" name="ToggleSelectAll" value="@Model.ToggleSelectAll.ToString()" />

        @if (Model.InvalidUpns.Any())
        {
            <div class="govuk-warning-text">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-warning-text__assistive">Warning</span>
                    <span>
                        One or more UPN(s) are invalid. Only valid UPN(s) will be shown.
                    </span>
                </strong>
            </div>

            <noscript>
            @if (Model.IsError)
            {
                <button class="govuk-button govuk-button--secondary" type="submit" name="ShowErrors" value="false">Show valid UPNs</button>
            }
            else
            {
                <button class="govuk-button govuk-button--secondary" type="submit" name="ShowErrors" value="true">Show invalid UPNs</button>
            }
            </noscript>
            <div id="toggleCheckbox" class="govuk-checkboxes govuk-!-padding-bottom-5 hide-for-non-js">
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="toggleErrors" name="toggleErrors" type="checkbox" data-val="true" value="true">
                    <label for="toggleErrors" class="govuk-label govuk-checkboxes__label">
                        <span id="errors-show">Show invalid UPNs</span>
                    </label>
                </div>
            </div>

            <div class="webapp-results"></div>
        }
        @if (!Model.IsError && Model.Pupils != null && Model.Pupils.Any()) // TODO handle SelectAll and Downloads here
        {
            <partial name="~/Views/MyPupilList/_MyPupilListDownloadLinks.cshtml" model="Model" />

            <div class="download-block">
                <div class="govuk-warning-text">
                    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                    <strong class="govuk-warning-text__text">
                        <span class="govuk-warning-text__assistive">Warning</span>
                        @if (!Model.ToggleSelectAll)
                        {
                            <span>Please be aware that by pressing Select all pupils may take time to process</span>
                        }
                        else
                        {
                            <span>Please be aware that by pressing Deselect all pupils may take time to process</span>
                        }
                    </strong>
                </div>
                @if (Model.ToggleSelectAll)
                {
                    <button asp-action="@Model.FormAction" asp-route-pageNumber="@Model.PageNumber" asp-route-sortField="@Model.SortField" asp-route-sortDirection="@Model.SortDirection" class="govuk-button govuk-button--secondary" type="submit" name="SelectAllNoJsChecked" value="false">Deselect all pupils</button>
                }
                else
                {
                    <button asp-action="@Model.FormAction" asp-route-pageNumber="@Model.PageNumber" asp-route-sortField="@Model.SortField" asp-route-sortDirection="@Model.SortDirection" class="govuk-button govuk-button--secondary" type="submit" name="SelectAllNoJsChecked" value="true">Select all pupils</button>
                }
            </div>
        }

        @if (Model.InvalidUpns.Any()) // TODO handle invalid where the UPN has failed validation or invalid data, should this be returned as part of AggregatePupilsForMyPupilsDomainService?
        {
            <div class="error-table hide-for-non-js @(Model.IsError ? "display-results" : "")">
                <div id="pupil--list--table">
                    <div class="giap--pupil-list">
                        <p class="govuk-body">Please check the pupils UPNs that are incorrect and <a class="govuk-link" id="invalidupns--contact--link" href="@Global.ContactLinkURL" target="_blank">contact the DfE</a> to report this data discrepancy.</p>

                        <table class="govuk-table">
                            <thead class="govuk-table__head">
                                <tr class="govuk-table__row">
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-select--chkbox">
                                        <span class="govuk-visually-hidden">checkboxes</span>
                                    </th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-firstname--text">First</th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-middlename--text">Middle</th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-surname--text">Surname</th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-upn--text">UPN</th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-dob--text">Date of birth</th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-gender--text">Gender</th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-pupilpremium--text">Pupil premium</th>
                                    <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-gender--text">LA</th>
                                </tr>
                            </thead>
                            <tbody class="govuk-table__body">
                                @foreach (Learner learner in Model.InvalidUpns)
                                {
                                    <tr class="govuk-table__row">
                                        @if (learner.LearnerNumberId != null)

                                        {
                                            <td class="govuk-table__cell">
                                                <div class="govuk-checkboxes">
                                                    <div class="govuk-checkboxes__item">
                                                        <input class="govuk-checkboxes__input webapp-checkboxes-searchresults" id="search--search-pupils-data-select--chkbox-@learner.LearnerNumberId" name="SelectedPupil" type="checkbox" value="@learner.LearnerNumberId" checked="@learner.Selected">
                                                        <label class="govuk-label" for="search--search-pupils-data-select--chkbox-@learner.LearnerNumberId">
                                                            <span class="govuk-visually-hidden">@(Model.UniquePupilNumberLabel): @learner.LearnerNumber, Name: @learner.Forename @learner.Surname</span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="govuk-table__cell">
                                                <div class="govuk-checkboxes">
                                                    <div class="govuk-checkboxes__item">
                                                        <input class="govuk-checkboxes__input webapp-checkboxes-searchresults" id="search--search-pupils-data-select--chkbox-@learner.LearnerNumber" name="SelectedPupil" type="checkbox" value="@learner.LearnerNumber" checked="@learner.Selected">
                                                        <label class="govuk-label" for="search--search-pupils-data-select--chkbox-@learner.LearnerNumber">
                                                            <span class="govuk-visually-hidden">@(Model.UniquePupilNumberLabel): @learner.LearnerNumber, Name: @learner.Forename @learner.Surname</span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </td>
                                        }
                                        <td class="govuk-table__cell" id="search--search-pupils-data-firstname--text1">
                                            @learner.Forename
                                        </td>
                                        <td class="govuk-table__cell" id="search--search-pupils-data-middlename--text1">
                                            @learner.Middlenames
                                        </td>
                                        <td class="govuk-table__cell" id="search--search-pupils-data-surname--text1">
                                            @learner.Surname
                                        </td>
                                        <td class="govuk-table__cell" id="search--search-pupils-data-upn--text1">
                                            @learner.LearnerNumber
                                        </td>
                                        <td class="govuk-table__cell" id="search--search-pupils-data-dob--text1">
                                            @learner.DOB?.ToString("dd/MM/yyyy")
                                        </td>
                                        <td class="govuk-table__cell" id="search--search-pupils-data-gender--text1">
                                            @learner.Gender
                                        </td>
                                        <td class="govuk-table__cell" id="search--search-pupils-heading-pupilpremium--text1">
                                            @learner.PupilPremium
                                        </td>
                                        <td class="govuk-table__cell" id="search--search-pupils-data-gender--text1">
                                            @learner.LocalAuthority
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        <div class="govuk-grid-row">
            @if (Model.NoPupils)
            {
                <div id="results--detail-warningmessage" class="govuk-warning-text">
                    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                    <strong class="govuk-warning-text__text">
                        <span class="govuk-warning-text__assistive">Warning</span>
                        <span>@ApplicationLabels.SearchMyPupilListNoPupilFound</span>
                    </strong>
                </div>
            }
            else
            {
                <div class="result-table @(Model.IsError ? "hide-for-non-js" : "")">
                    <div id="pupil--list--table">
                        <div class="giap--pupil-list">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-visually-hidden">Do you want to select</legend>
                                <table class="govuk-table">
                                    <thead class="govuk-table__head">
                                        <tr class="govuk-table__row">
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-select--chkbox">
                                                <span class="govuk-visually-hidden">checkboxes</span>
                                            </th>
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-firstname--text" aria-sort="@SortHelper.DetermineAriaSort(AzureSearchFields.Forename, Model.SortField, Model.SortDirection)">
                                                <button id="search--sort-firstname--button" asp-action="@Model.FormAction" asp-route-pageNumber="@Model.PageNumber" asp-route-sortField="@AzureSearchFields.Forename" asp-route-sortDirection="@SortHelper.DetermineSortDirection(AzureSearchFields.Forename, Model.SortField, Model.SortDirection)">
                                                    First
                                                </button>
                                            </th>
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-surname--text" aria-sort="@SortHelper.DetermineAriaSort(AzureSearchFields.Surname, Model.SortField, Model.SortDirection)">
                                                <button id="search--sort-surname--button" asp-action="@Model.FormAction" asp-route-pageNumber="@Model.PageNumber" asp-route-sortField="@AzureSearchFields.Surname" asp-route-sortDirection="@SortHelper.DetermineSortDirection(AzureSearchFields.Surname, Model.SortField, Model.SortDirection)">
                                                    Surname
                                                </button>
                                            </th>
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-learner-number--text">@(Model.UniquePupilNumberLabel)</th>
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-dob--text" aria-sort="@SortHelper.DetermineAriaSort(AzureSearchFields.DOB, Model.SortField, Model.SortDirection)">
                                                <button id="search--sort-dob--button" asp-action="@Model.FormAction" asp-route-pageNumber="@Model.PageNumber" asp-route-sortField="@AzureSearchFields.DOB" asp-route-sortDirection="@SortHelper.DetermineSortDirection(AzureSearchFields.DOB, Model.SortField, Model.SortDirection)">
                                                    Date of birth
                                                </button>
                                            </th>
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-sex--text" aria-sort="@SortHelper.DetermineAriaSort(AzureSearchFields.Sex, Model.SortField, Model.SortDirection)">
                                                <button id="search--sort-sex--button" asp-action="@Model.FormAction" asp-route-pageNumber="@Model.PageNumber" asp-route-sortField="@AzureSearchFields.Sex" asp-route-sortDirection="@SortHelper.DetermineSortDirection(AzureSearchFields.Sex, Model.SortField, Model.SortDirection)">
                                                    Sex
                                                </button>
                                            </th>
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-pupilpremium--text">Pupil premium</th>
                                            <th scope="col" class="govuk-table__header" id="search--search-pupils-heading-local-authority--text">LA</th>

                                        </tr>
                                    </thead>
                                    <tbody class="govuk-table__body">
                                        @foreach (var pupil in Model.Pupils)
                                        {
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-checkboxes govuk-checkboxes--small">
                                                    <div class="govuk-checkboxes__item">
                                                        <input class="govuk-checkboxes__input" id="search--search-pupils-data-select--chkbox-@pupil.UniquePupilNumber" name="SelectedPupil" type="checkbox" value="@pupil.UniquePupilNumber" @*checked="@pupil.Selected"*@>
                                                        <label class="govuk-label govuk-checkboxes__label" for="search--search-pupils-data-select--chkbox-@pupil.UniquePupilNumber">
                                                            <span class="govuk-visually-hidden">@(Model.UniquePupilNumberLabel): @pupil.UniquePupilNumber, Name: @pupil.Forename @pupil.Surname</span>
                                                        </label>
                                                    </div>

                                                   @*  @if (pupil.Id != null) // TODO our Identifier won't be null so can drop this
                                                    {
                                                        
                                                    }
                                                    else
                                                    {
                                                        <div class="govuk-checkboxes__item">
                                                            <input class="govuk-checkboxes__input" id="search--search-pupils-data-select--chkbox-@pupil.LearnerNumber" name="SelectedPupil" type="checkbox" value="@pupil.LearnerNumber" checked="@pupil.Selected">
                                                            <label class="govuk-label govuk-checkboxes__label" for="search--search-pupils-data-select--chkbox-@pupil.LearnerNumber">
                                                                <span class="govuk-visually-hidden">@(Model.LearnerNumberLabel): @pupil.LearnerNumber, Name: @pupil.Forename @pupil.Surname</span>
                                                            </label>
                                                        </div>
                                                    } *@
                                                </td>
                                                <td class="govuk-table__cell search--search-pupils-data-firstname--text">
                                                    @pupil.Forename
                                                </td>

                                                <td class="govuk-table__cell search--search-pupils-data-surname--text">
                                                    @pupil.Surname
                                                </td>
                                                <td class="govuk-table__cell search--search-pupils-data-learner-number--text">
                                                    @pupil.UniquePupilNumber
                                                </td>
                                                <td class="govuk-table__cell search--dob--cell search--search-pupils-data-dob--text">
                                                    @pupil.DateOfBirth
                                                </td>
                                                <td class="govuk-table__cell search--search-pupils-data-sex--text">
                                                    @pupil.Sex
                                                </td>

                                                <td class="govuk-table__cell search--search-pupils-pupilpremium--text">
                                                    @pupil.PupilPremiumLabel
                                                </td>

                                                <td class="govuk-table__cell search--search-pupils-data-local-authority--text">
                                                    @pupil.LocalAuthorityCode
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </fieldset>


                            <div>
                                <ul class="pagination-list">

                                    <li class="page-list-first">
                                        <button id="page-first"
                                                type="submit"
                                                asp-action="@Model.FormAction"
                                                asp-route-pageNumber="1"
                                                asp-route-sortField="@Model.SortField"
                                                asp-route-sortDirection="@Model.SortDirection">
                                            &#60;&#60; First
                                        </button>
                                    </li>
                                    @if (Model.IsPreviousPageAvailable)
                                    {
                                        <li class="page-list-previous">

                                            <button
                                                id="page-previous"
                                                type="submit"
                                                asp-action="@Model.FormAction"
                                                asp-route-pageNumber="@(Model.PageNumber - 1)"
                                                asp-route-sortField="@Model.SortField"
                                                asp-route-sortDirection="@Model.SortDirection">&#60;&#60; Previous</button>
                                        </li>
                                    }
                                    <li>@Model.PageNumber</li>
                                    @if (Model.IsMorePageAvailable)
                                    {
                                        <li class="page-list-next">
                                            <button
                                                id="page-next"
                                                type="submit"
                                                asp-action="@Model.FormAction"
                                                asp-route-pageNumber="@(Model.PageNumber + 1)"
                                                asp-route-sortField="@Model.SortField"
                                                asp-route-sortDirection="@Model.SortDirection">Next &#62;&#62;</button>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
    <partial name="_MetadataFilesPartial" />
</div>
