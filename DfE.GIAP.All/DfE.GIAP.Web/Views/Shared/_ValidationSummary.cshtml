@model ModelStateDictionary

<div class="@(ViewData.ModelState.IsValid ? "validation-summary-valid" : "") govuk-error-summary" id="giap-summary" data-valmsg-summary="true" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
    <h2 class="govuk-error-summary__title" id="error-summary-title">There is a problem</h2>
    <div class="govuk-error-summary__body results--heading-errormessage">
        <ul class="govuk-list govuk-error-summary__list">
            @foreach (var modelError in Model.SelectMany(keyValuePair => keyValuePair.Value.Errors))
            {
                <li>
                    <span class="field-validation-error govuk-error-message">@Html.Raw(modelError.ErrorMessage)</span>
                </li>
            }
        </ul>
    </div>
</div>